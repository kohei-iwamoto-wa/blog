<div class="contents">
   <%= breadcrumbs %>
    <h3>
      編集
    </h3>
  <%= form_for @blog do |f| %>
  <div class="field">
    <%= f.label :name, "名前" %><br>
    <%= f.text_area :name, size: "100x1"%>
  </div>
  <div class="field">
     <%= f.label :title, "タイトル" %><br>
    <%= f.text_area :title, size: "100x1" %>
  </div>
  <div class="field">
    <%= f.label :text, "テキスト" %><br>
    <%= f.text_area :text, size: "100x25" %>
  </div>
  <div class="actions">
    <%= f.submit "SENT" %>
  </div>
  <% end %>
</div>
